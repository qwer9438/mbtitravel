<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 그림자 효과를 위한 아이템 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A000000"/> <!-- 그림자 색상 -->
            <corners android:radius="4dp"/> <!-- 코너 둥글기 -->
        </shape>
    </item>
    <!-- 상단 패딩을 주어 그림자 효과가 보이도록 함 -->
    <item android:top="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- 배경색 -->
            <corners android:radius="4dp"/> <!-- 코너 둥글기 -->
            <stroke android:width="1dp" android:color="#FFDDDDDD"/> <!-- 경계선 색상 -->
        </shape>
    </item>
</layer-list>
